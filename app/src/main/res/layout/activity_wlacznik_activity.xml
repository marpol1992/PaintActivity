<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marek.paintactivity.wlacznik_activity"
    android:background="#00647a">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuchnia"
                android:id="@+id/textView3"
                android:layout_column="12"
                android:theme="@style/Base.TextAppearance.AppCompat.Display1"
                android:textStyle="bold"
                android:textColor="#ffffffff" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="220dp"
            android:layout_gravity="left|center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="220dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/off"
                        android:onClick="wlacznik"
                        android:background="#00647a"
                        android:layout_column="12"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
            </LinearLayout>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:rotation="270"/>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:layout_column="12"
                android:layout_above="@+id/imageView2"
                android:layout_alignEnd="@+id/textView3" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_column="12"
                    android:src="@mipmap/off"
                    android:layout_below="@+id/imageView3"
                    android:layout_alignParentStart="true" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:rotation="270"/>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Åazienka"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:layout_column="12"
                android:layout_above="@+id/imageView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_below="@+id/imageView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_column="12"
                android:src="@mipmap/off"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:rotation="270"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
